<h1><%= site_name %></h1>
<div class="front_page">
	<h2><%= i18n("index_boards") %></h2>
	<% for _, board in ipairs(boards) do %>
	<div class="board">
		<a href="<%= url_for('web.boards.board', { board=board.short_name }) %>">/<%= board.short_name %>/ - <%= board.name %></a>
		<% if board.subtext then %><em class="subtext"><%= board.subtext %></em><% end %>
		<% if board.rules then %>
		<h3><%= i18n("rules") %></h3>
		<%- markdown(board.rules) %>
		<% end %>
	</div>
	<% end %>
</div>
