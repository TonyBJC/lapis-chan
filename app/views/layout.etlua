<!DOCTYPE HTML>
<html id="top">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<link rel="stylesheet" href="/static/css/style.css" />
		<% if board then %>
		<link rel="stylesheet" href="/static/css/<%= board.theme %>.css" />
		<% if board.draw then %>
		<link rel="stylesheet" href="/static/css/tegaki.css" />
		<script src="/static/js/tegaki/tegaki.js"></script>
		<% end %>
		<% end %>
		<script src="/static/js/script.js"></script>
		<title><%= page_title %></title>
	</head>
	<body>
		<% if errors then %>
		<% render("views.error") %>
		<% end %>
		<% render("views.list_boards") %>
		<div id="right">
			<% render("views.form_locale") %>
			<% if session.name then %>
			<span id="logout">[<a href="<%= url_for('logout') %>"><%= i18n("logout") %></a>]</span>
			<% end %>
		</div>
		<% content_for("inner") %>
		<% render("views.list_boards") %>
		<% render("views.copyright") %>
	</body>
</html>
